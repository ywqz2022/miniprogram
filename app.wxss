/**app.wxss**/
/* ========================================
   Figma 设计规范变量
   从 Figma 中提取的设计 tokens
   ======================================== */

page {
  /* 颜色系统 - 从 App Builder 提取 */
  --color-primary: #0EA5E9;          /* 主色调 (sky-500/teal-500) */
  --color-primary-dark: #0284C7;     /* 主色深色 */
  --color-background: #F8FAFC;       /* 背景色 (gray-50) */
  --color-text: #0F172A;             /* 主文字颜色 (slate-900) */
  --color-text-secondary: #64748B;   /* 次要文字颜色 (slate-500) */
  --color-text-tertiary: #94A3B8;    /* 三级文字颜色 (slate-400) */
  --color-border: #E2E8F0;           /* 边框颜色 (border) */
  --color-success: #10B981;          /* 成功色 (emerald-500) */
  --color-warning: #F59E0B;          /* 警告色 (amber-500) */
  --color-error: #EF4444;            /* 错误色 (red-500) */
  --color-white: #FFFFFF;            /* 白色 */
  
  /* App Builder 特定颜色 */
  --color-sky-50: #F0F9FF;
  --color-sky-100: #E0F2FE;
  --color-sky-500: #0EA5E9;
  --color-sky-600: #0284C7;
  --color-teal-500: #14B8A6;
  --color-teal-600: #0D9488;
  --color-slate-50: #F8FAFC;
  --color-slate-100: #F1F5F9;
  --color-slate-200: #E2E8F0;
  --color-slate-500: #64748B;
  --color-slate-900: #0F172A;
  
  /* 间距系统 - 从 App Builder 提取 (Tailwind spacing * 2) */
  --spacing-xs: 16rpx;   /* 8px (spacing-2) */
  --spacing-sm: 24rpx;   /* 12px (spacing-3) */
  --spacing-md: 32rpx;   /* 16px (spacing-4) */
  --spacing-lg: 40rpx;   /* 20px (spacing-5) */
  --spacing-xl: 48rpx;   /* 24px (spacing-6) */
  --spacing-2xl: 64rpx;  /* 32px (spacing-8) */
  
  /* 字体大小 - 从 App Builder 提取 (Tailwind text sizes * 2) */
  --font-h1: 48rpx;      /* 24px (text-3xl) - 大标题 */
  --font-h2: 40rpx;      /* 20px (text-xl) - 中标题 */
  --font-h3: 36rpx;      /* 18px (text-lg) - 小标题 */
  --font-body: 32rpx;    /* 16px (text-base) - 正文 */
  --font-caption: 28rpx; /* 14px (text-sm) - 说明文字 */
  --font-small: 24rpx;   /* 12px (text-xs) - 小字 */
  
  /* 圆角系统 - 从 App Builder 提取 (Tailwind radius * 2) */
  --radius-sm: 16rpx;    /* 8px (rounded-lg) - 小圆角 */
  --radius-md: 24rpx;    /* 12px (rounded-xl) - 中圆角 */
  --radius-lg: 32rpx;    /* 16px (rounded-2xl) - 大圆角 */
  --radius-xl: 48rpx;    /* 24px (rounded-3xl) - 超大圆角 */
  --radius-round: 999rpx; /* 圆形 (rounded-full) */
  
  /* 阴影系统 - 从 App Builder 提取 */
  --shadow-sm: 0 2rpx 6rpx -1px rgba(0,0,0,0.1), 0 2rpx 4rpx -2px rgba(0,0,0,0.1);
  --shadow-md: 0 4rpx 6rpx -1px rgba(0,0,0,0.1), 0 4rpx 8rpx -4px rgba(0,0,0,0.1);
  --shadow-lg: 0 20rpx 30rpx -5px rgba(0,0,0,0.1), 0 16rpx 20rpx -12px rgba(0,0,0,0.1);
  --shadow-xl: 0 40rpx 50rpx -10px rgba(0,0,0,0.1), 0 16rpx 20rpx -12px rgba(0,0,0,0.1);
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* ========================================
   通用样式类 - 基于 Figma 设计
   ======================================== */

/* 按钮样式 - App Builder 风格 */
.btn-primary {
  background: linear-gradient(135deg, var(--color-sky-500) 0%, var(--color-teal-500) 100%);
  color: var(--color-white);
  border-radius: var(--radius-round);
  padding: var(--spacing-md) var(--spacing-xl);
  font-size: var(--font-body);
  font-weight: 600;
  box-shadow: var(--shadow-sm);
  border: none;
}

.btn-secondary {
  background-color: var(--color-slate-100);
  color: var(--color-slate-900);
  border-radius: var(--radius-round);
  padding: var(--spacing-md) var(--spacing-xl);
  font-size: var(--font-body);
  font-weight: 500;
  border: 1rpx solid var(--color-slate-200);
}

/* 卡片样式 - App Builder 风格 */
.card {
  background-color: var(--color-white);
  border-radius: var(--radius-lg);
  border: 1rpx solid var(--color-slate-200);
  padding: var(--spacing-md);
  box-shadow: var(--shadow-sm);
}

/* 文本样式 */
.text-primary {
  color: var(--color-text);
  font-size: var(--font-body);
}

.text-secondary {
  color: var(--color-text-secondary);
  font-size: var(--font-caption);
} 
